{
    "version": "2.0.0",
    "tasks": [
        {
            "type": "cppbuild",
            "label": "C/C++: cc build active file",
            "command": "/usr/bin/cc",  // cc derleyici kullanılıyor
            "args": [
                "-fdiagnostics-color=always",
                "-g", 
                "-Wall",      // Tüm uyarıları göster
                "-Wextra",    
                "-Werror",    
                "${file}",
                "-o",
                "${fileDirname}/${fileBasenameNoExtension}"
            ],
            "options": {
                "cwd": "${fileDirname}"
            },
            "problemMatcher": [
                "$gcc"
            ],
            "group": {
                "kind": "build",
                "isDefault": true
            },
            "detail": "Task generated by Debugger."
        }
    ]
}
